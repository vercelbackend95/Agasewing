---
// src/pages/index.astro
import "@/styles/global.css";
import { Navbar21 } from "@/components/sections/Navbar21";
import { Hero13 } from "@/components/sections/Hero13";
import { About15 } from "@/components/sections/About15";
import { HowToImplement } from "@/components/sections/HowToImplement";
import { Gallery25 } from "@/components/sections/Gallery25";
import { PricingAccordion } from "@/components/sections/PricingAccordion";
import { Feature284 } from "@/components/sections/Feature284";
import { Cta1 } from "@/components/sections/Cta1";
import { Testimonial7 } from "@/components/sections/Testimonial7";
import { LocationMap } from "@/components/sections/LocationMap";
import { Contact16 } from "@/components/sections/Contact16";
import { Footer30 } from "@/components/sections/Footer30";

const sectionPatternStyle =
  "radial-gradient(circle at 0 0, rgba(0, 0, 0, 0.03) 0.6px, transparent 0.6px), radial-gradient(circle at 8px 8px, rgba(0, 0, 0, 0.02) 0.6px, transparent 0.6px), #f7f5ef";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Sewing at Aga's</title>
  </head>
  <body class="[&_h2]:!text-5xl [&_h2]:!font-medium [&_h2]:!tracking-tight">
    <Navbar21 client:load />
    <Hero13 client:load />

    <main style={`background-image: ${sectionPatternStyle}; background-size: 16px 16px;`}>
      <HowToImplement className="bg-transparent" />
      <About15 />
      <Gallery25 className="bg-transparent" client:visible />
      <section id="services">
        <Feature284 className="bg-transparent" client:visible />
      </section>
      <PricingAccordion className="bg-transparent" client:visible />
      <Cta1 className="bg-transparent" client:visible />
      <Testimonial7 className="bg-transparent" client:visible />
      <LocationMap />
      <Contact16 />
      <Footer30 className="bg-transparent" />
    </main>
  </body>
</html>
